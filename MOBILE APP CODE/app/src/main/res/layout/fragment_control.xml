<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingHorizontal="20dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== TITLE ===== -->
        <TextView
            android:id="@+id/titleControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <!-- ===== Nutrient Goals Card ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card_white"
            android:elevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrient Goals"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEdit"
                    android:layout_width="72dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:text="Edit"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:background="@drawable/bg_button_light"/>
            </RelativeLayout>

            <!-- PH -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ph"
                android:textColor="#777777"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textPhRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5 - 6.5 ph"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Nutrients -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrients"
                android:textColor="#777777"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textNutrientRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="560 - 650 ppm"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Water Level -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Level"
                android:textColor="#777777"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textWaterLevelRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 - 13 cm"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- ===== Buttons Row ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_white"
            android:layout_marginTop="12dp"
            android:elevation="3dp"
            android:padding="12dp"
            android:gravity="center"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/btnPump"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_pump"
                    app:tint="#4CAF50"/>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Pump"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnABMix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_abmix"
                    app:tint="#4CAF50"/>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="AB Mix"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnPhUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ph_up"
                    app:tint="#4CAF50"/>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="pH Up"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnPhDown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ph_down"
                    app:tint="#4CAF50"/>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="pH Down"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
        <!-- ===== Activity Log ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_white"
            android:elevation="3dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/textLog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PH down added - 10:32 AM"
                android:textColor="#777777"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textLog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pump added - 10:02 AM"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
