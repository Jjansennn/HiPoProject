<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrowback"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plants"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Plant Image -->
        <ImageView
            android:id="@+id/imgPlant"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pokchoy4k" />

        <!-- Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_white"
            android:padding="16dp">

            <!-- Plant Name -->
            <TextView
                android:id="@+id/tvPlantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pok Choy"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvPlantStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 36 of 45  -  Growing"
                android:textColor="@color/gray" />

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progressGrowth"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:progress="80"
                    android:progressTint="@color/green"
                    android:backgroundTint="@color/light_gray" />

                <TextView
                    android:id="@+id/tvPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <!-- Growth Overview -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Growth Overview"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvPlantDate"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Planting Date      19 Sep 2025"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/tvPlantDuration"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Estimated Harvest  3 Nov 2025"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/tvPlantHarvest"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Harvested          0 pc"
                    android:textColor="@color/gray"/>
            </LinearLayout>

            <!-- Harvest Overview -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harvest Overview"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvPlantCount"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Total Harvested    24 pcs"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/tvLastHarvest"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Last Harvested     3 Sep 2025"
                    android:textColor="@color/gray"/>
            </LinearLayout>

            <!-- Placeholder chart -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_chart"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvMostHarvest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Harvested on  October 2025"
                android:textAlignment="center"
                android:textSize="10dp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
