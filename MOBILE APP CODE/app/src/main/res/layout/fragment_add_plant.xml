<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddPlantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrowback"
                android:contentDescription="Back" />

            <!-- Title -->
            <TextView
                android:text="Plants"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>




        <!-- Card background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_button_light"
            android:elevation="2dp">

            <!-- Add new plant -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new plant"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp" />

            <!-- Image placeholder -->
            <LinearLayout
                android:id="@+id/layoutAddImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/light_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/imagePlant"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:text="plantâ€™s image"
                    android:textSize="12sp"
                    android:textColor="#999"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Describe your plant -->
            <TextView
                android:text="Describe your plant"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Input rows -->
            <!-- Name of your plant -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_plant"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/green" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Name of your plant"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <!-- Planting date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_plantdate"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/green" />

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Planting date"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Estimated Growth Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_growthtime"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/green" />

                <EditText
                    android:id="@+id/etDuration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Estimated Growth Duration"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Harvest date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_harvestdate"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/green" />

                <EditText
                    android:id="@+id/etHarvest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Harvest date"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Number of plant -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_quantity"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/green" />

                <EditText
                    android:id="@+id/etCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Number of plant"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:inputType="number" />
            </LinearLayout>


            <!-- Bottom buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textColor="@color/gray"
                    android:background="@drawable/bg_button_light" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_green_rounded" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
